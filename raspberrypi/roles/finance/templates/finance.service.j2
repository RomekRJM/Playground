[Unit]
Description=Stock price monitoring and alerting app
After=syslog.target network.target

[Service]
SuccessExitStatus=0
User=pi
Group=pi
Type=forking
ExecStart=/bin/bash {{ finance_wrapper_destination }}
ExecStop=/bin/kill -15 $MAINPID
TimeoutStartSec=360
Restart=on-failure

[Install]
WantedBy=multi-user.target
